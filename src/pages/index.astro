---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import {
  ProjectBadges,
  ProjectContent,
  ProjectCard,
  ProjectTech,
} from "@/components/ProjectCard";
import Background from "@/components/Background";
import {
  OnlineDemo,
  SourceCode,
  ReadMore,
  DownloadableDemo,
  UnderDevelopment,
  LaravelBadge,
  ReactBadge,
  NextJsBadge,
  GodotBadge,
  ViteBadge,
  ThreeJsBadge,
} from "@/components/Badges";
import { X } from "lucide-react";
import SpaceCenter from "@/components/SpaceCenter.astro";
---

