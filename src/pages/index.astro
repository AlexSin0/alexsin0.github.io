    <div class="relative text-8xl font-semibold uppercase">
      <div class="relative z-10">Oleksandr</div>
      <div class="text-secondary absolute top-4 left-6 z-0 select-none">
        Alexander
      </div>
      <div class="relative left-8 my-1">Synelnikov</div>
    </div>
    <div class="relative left-18 mt-12 text-xl">
      <div class="text-2xl">Software Engineer</div>
      <div class="">Based in Riga, Latvia</div>
    </div>
  </div>
  <div class="h-[150vh]"></div>
  <div class="relative z-10 mx-auto flex w-full max-w-2xl flex-col gap-6">
    <!-- <Background className="absolute -z-10" /> -->
    <ProjectCard title="Republic courses" client:idle>
      <ProjectTech>
        <LaravelBadge />
        <X strokeWidth={2} size={16} />
